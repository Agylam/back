{   
  "compilerOptions": {          
    "target": "es2016",                                                                   
    "module": "ES6",                                                                 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,     
    "moduleResolution":"node",   
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                                                                                    
    "skipLibCheck": true,
    "outDir": "build"
  },
  "sourceMap": true,
  "prestart": "npm run build",
  "include": ["src/*","src"],   
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true 
}