{   
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "build",
    "sourceMap": true
  },
  "include": ["src","tests"],
  "prestart": "npm run start"
}