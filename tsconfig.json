{   
  "compilerOptions": {          
    "target": "es2016",                                                                   
    "module": "ES6",                                                                 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,     
    "moduleResolution":"node",                                                                                       
    "skipLibCheck": true
  },
  "sourceMap": true,
  "prestart": "npm run build",
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": ["src/*", "app.js","src"]
}